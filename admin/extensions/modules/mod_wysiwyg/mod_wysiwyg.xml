	<authorUrl>http://migur.com/</authorUrl>
	<version>1.6.0</version>
	<description>The advanced module to add the text data into the newsletter</description>
	<files>
		<filename
			module="mod_wysiwyg">mod_wysiwyg.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ADMIN_WYSIWYG" />
	<config>
		<fields name="params">
			<fieldset name="basic">
                <field
                    name="text"
                    type="editor"
                    class="inputbox"
                    label=""
                    description="COM_CONTENT_FIELD_EDITOR_DESC"
                    width="500"
                    height="200"
                    filter="ContentHelper::filterText" />
			</fieldset>
		</fields>
	</config>
</extension>
