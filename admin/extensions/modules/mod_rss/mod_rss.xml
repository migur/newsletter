	<description>The simplest rss module</description>
	<files>
		<filename
			module="mod_rss">mod_rss.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ADMIN_RSS" />
